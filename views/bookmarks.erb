<% @bookmarks = Bookmark.all %>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>

      <form method="post" action="/bookmarks/<%=bookmark.id %>"> 
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="delete"></form>

    </li>
  <% end %>
</ul>

